{
	"name": "legacys-end",
	"private": true,
	"version": "0.0.0",
	"type": "module",
	"scripts": {
		"dev": "vite",
		"build": "npm run localize:build && vite build",
		"preview": "vite preview",
		"lint": "npm run lint:biome && npm run lint:lit && npm run lint:tsc && npm run lint:arch",
		"lint:biome": "biome check .",
		"lint:lit": "lit-analyzer src",
		"lint:tsc": "tsc --noEmit",
		"lint:arch": "depcruise --validate .dependency-cruiser.cjs src",
		"format": "biome check --write .",
		"test": "vitest run",
		"test:watch": "vitest",
		"test:coverage": "vitest run --coverage",
		"test:ui": "vitest --ui",
		"test:e2e": "playwright test",
		"test:e2e:update": "playwright test --update-snapshots",
		"localize:extract": "lit-localize extract",
		"localize:build": "lit-localize build",
		"size": "npm run build && size-limit",
		"analyze": "ANALYZE=true npm run build",
		"analyze:cem": "custom-elements-manifest analyze",
		"prepare": "husky || true",
		"storybook": "storybook dev -p 6006",
		"build-storybook": "storybook build"
	},
	"size-limit": [
		{
			"path": "dist/assets/*.js",
			"limit": "200 kB",
			"gzip": true
		}
	],
	"dependencies": {
		"@awesome.me/webawesome": "^3.0.0",
		"@lit-labs/signals": "^0.2.0",
		"@lit/context": "^1.1.6",
		"@lit/localize": "^0.12.2",
		"@lit/task": "^1.0.3",
		"@speed-highlight/core": "^1.2.12",
		"lit": "^3.3.2",
		"syntax-highlight-element": "^1.2.0"
	},
	"devDependencies": {
		"@axe-core/playwright": "^4.11.0",
		"@babel/core": "^7.28.6",
		"@babel/plugin-proposal-decorators": "^7.28.6",
		"@biomejs/biome": "^2.0.8",
		"@commitlint/cli": "^20.2.0",
		"@commitlint/config-conventional": "^20.2.0",
		"@custom-elements-manifest/analyzer": "^0.11.0",
		"@lit-labs/rollup-plugin-minify-html-literals": "^0.1.1",
		"@lit/localize-tools": "^0.7.2",
		"@playwright/test": "^1.57.0",
		"@size-limit/file": "^12.0.0",
		"@storybook/addon-a11y": "^10.2.4",
		"@storybook/addon-actions": "^9.0.8",
		"@storybook/addon-docs": "^10.2.4",
		"@storybook/addon-vitest": "^10.2.4",
		"@storybook/web-components-vite": "^10.2.4",
		"@tsconfig/strictest": "^2.0.8",
		"@types/dom-speech-recognition": "^0.0.7",
		"@types/node": "^25.0.2",
		"@vitest/browser": "^4.0.15",
		"@vitest/browser-playwright": "^4.0.15",
		"@vitest/coverage-v8": "^4.0.15",
		"axe-core": "^4.11.1",
		"dependency-cruiser": "^17.3.7",
		"husky": "^9.1.7",
		"lint-staged": "^16.2.7",
		"lit-analyzer": "^2.0.3",
		"playwright": "^1.57.0",
		"rollup-plugin-visualizer": "^6.0.5",
		"sharp": "^0.34.5",
		"size-limit": "^12.0.0",
		"storybook": "^10.2.4",
		"svgo": "^4.0.0",
		"typescript": "^5.9.3",
		"vite": "^7.2.7",
		"vite-imagetools": "^9.0.2",
		"vite-plugin-babel": "^1.4.1",
		"vite-plugin-image-optimizer": "^2.0.3",
		"vitest": "^4.0.15"
	},
	"customElements": "custom-elements.json"
}
