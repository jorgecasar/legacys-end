{
	"name": "legacys-end",
	"private": true,
	"version": "0.0.0",
	"type": "module",
	"scripts": {
		"dev": "vite",
		"build": "npm run localize:build && vite build",
		"preview": "vite preview",
		"lint": "npm run lint:biome && npm run lint:lit && npm run lint:tsc",
		"lint:biome": "biome check .",
		"lint:lit": "lit-analyzer src",
		"lint:tsc": "tsc --noEmit",
		"format": "biome check --write .",
		"test": "vitest run",
		"test:watch": "vitest",
		"test:coverage": "vitest run --coverage",
		"test:ui": "vitest --ui",
		"localize:extract": "lit-localize extract",
		"localize:build": "lit-localize build",
		"prepare": "husky || true"
	},
	"dependencies": {
		"@awesome.me/webawesome": "^3.0.0",
		"@lit/context": "^1.1.6",
		"@lit/localize": "^0.12.2",
		"@speed-highlight/core": "^1.2.12",
		"lit": "^3.3.1",
		"syntax-highlight-element": "^1.2.0"
	},
	"devDependencies": {
		"@biomejs/biome": "^2.0.8",
		"@commitlint/cli": "^20.2.0",
		"@commitlint/config-conventional": "^20.2.0",
		"@lit/localize-tools": "^0.7.2",
		"@types/dom-speech-recognition": "^0.0.7",
		"@types/node": "^25.0.2",
		"@vitest/browser": "^4.0.15",
		"@vitest/browser-playwright": "^4.0.15",
		"@vitest/coverage-v8": "^4.0.15",
		"husky": "^9.1.7",
		"lint-staged": "^16.2.7",
		"lit-analyzer": "^2.0.3",
		"playwright": "^1.57.0",
		"typescript": "^5.9.3",
		"vite": "^7.2.7",
		"vitest": "^4.0.15"
	}
}
